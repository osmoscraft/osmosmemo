{
  "name": "Markdown Page Summary",
  "version": "1.0.0",
  "description": "Summarize the current page in a markdown snippet",
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "declarativeContent", "storage"]
}
